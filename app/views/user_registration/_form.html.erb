<%= form_with model: user_model, url: user_registration_index_path do |form| %>
  <%= render 'layouts/errors', resource: user_model %>

  <div class='form-group row mb-2'>
    <div class='col-sm-12'>
      <%= form.text_field :name, required: true, class: 'form-control', placeholder: t('helpers.label.github_user_registration_form.name') %>
    </div>
  </div>

  <div class='form-group row'>
    <div class='col-sm-12'>
      <%= form.text_field :url, type: 'url', class: 'form-control',
                          placeholder: "https://example.com", pattern: 'https?://github.com\/.*',
                          oninvalid:"this.setCustomValidity('Enter Github Profile Url Here')",
                          oninput:"this.setCustomValidity('')",
                          required: true %>
    </div>
  </div>

  <div class='actions text-center mt-3'>
    <%= form.submit t('helpers.buttons.submit'), class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>
